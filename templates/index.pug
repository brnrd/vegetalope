
extends layout

block header
  a.home(href='/')
    svg.logo(alt='vegetalope logo' title='vegetalope logo, looks like a inverted triangle but really is a capital V')
      title vegetalope logo, looks like a inverted triangle but really is a capital V
      use(xlink:href='#vegetalope-logo')
  //- Logo SVG trick: https://css-tricks.com/change-color-of-svg-on-hover/#article-header-id-1
  svg.logo--hidden(version='1.1' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' preserveaspectratio='xMidYMid meet')
      symbol#vegetalope-logo(viewbox='0 0 640 640')
        path(d='M320 558L488 93.81L217 93.81L217 113L461 113L320 500.95L172.38 93.81L150.95 93.81L320 558Z')
  input.color-picker(type='color' value='#fd83b5')

  block background
    div.background
      - for (let x = 0; x < 10000; x++)
        div.square(id=('square-' + x) class='square--' + (x % 2 === 0 ? 'even' : 'odd') + ' ' + 'square--' + (x % 200 < 100 ? 'centeven' : 'centodd'))

block script 
  script(src='./script.js')
