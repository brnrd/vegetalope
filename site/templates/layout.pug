doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width', initial-scale=1)
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href=contents.css['main.css'].url)
      // favicon
      link(rel='apple-touch-icon', sizes='180x180', href=contents['apple-touch-icon.png'].url)
      link(rel='icon', type='image/png', sizes='32x32', href=contents['favicon-32x32.png'].url)
      link(rel='icon', type='image/png', sizes='16x16', href=contents['favicon-16x16.png'].url)
      link(rel='manifest', href=contents['site.webmanifest'].url)
      link(rel='mask-icon', href=contents['safari-pinned-tab.svg'].url, color='#fc83b5')
      link(rel='shortcut icon' href=contents['favicon.ico'].url)
      meta(name='description' content='vegetalope')
      meta(name='msvalidate.01', content='C26C7601A7BC06EDD0773BD8B09723CF' )
      meta(name='google-site-verification', content='t3A204_5LvJETIroUbNAgzYzsK2_dgb1wn6qNpBuQY0' )
  body
    header
      h1.hidden
        a(href=locals.url)= locals.name
      block header
    section
      block content
    footer
      block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p Content made by&nbsp;
              a(href='https://twitter.com/vegetalope') #{ locals.owner }
              | &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
