vg-pink = #fd83b5
vg-green = #97e9c2
vg-blue = #83ecfc
vg-white = #ffffff
vg-black = #171717
vg-font = Helvetica Neue, Helvetica, Arial, sans-serif

base-font-size = 2.4em
base-line-height = 1.5em

*:focus
  outline 0.0625em solid vg-blue

*,
body,
html
  box-sizing border-box

body,
html
  background-color vg-white
  color #171717
  font-family vg-font

body
  padding 0 16px

header,
footer
  text-align center

a
  @media print
    color vg-black

a:focus,
a:hover
  background-color lighten(vg-pink, 50%)
  color #171717

.hidden
  @media screen
    position absolute
    top auto
    left -999em
    width 1px
    height 1px
    white-space nowrap
    overflow hidden

#logo
  width 320px
  height 320px

  @media print
    display none

  @media (max-width: 640px)
    width 160px
    height 160px


#logo-hidden
  display none

  @media (max-width: 640px)
    width 160px
    height 160px

#logo:hover
  fill vg-pink

#home:hover,
#home:focus
  background-color transparent

.nav > a
  margin 0 2px

  @media print
    display none

table
  border-collapse collapse
  border 1px solid #171717

table th,
table td
  border 1px solid #171717
  padding 4px

pre
  font-family monospace
  line-height 140%
  white-space pre
  padding-left 1em

code
  font-family  monospace
  line-height 140%
  white-space pre
  background lighten(vg-green, 50%)


blockquote
  padding-left 1em
  border-left 0.2em solid vg-green
  font-family serif
  font-style italic
