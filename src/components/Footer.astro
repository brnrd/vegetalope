---
import { Image } from 'astro:assets';
import logoImage from '../assets/vegetalope.webp';
import ThemeToggle from './ThemeToggle.astro';

const pathname = Astro.url.pathname;
const showRss = pathname === '/' || pathname.startsWith('/write');
---

<footer class="site-footer">
	<div class="inner home-footer">
		<a class="hello" href="/about" aria-label="About Bernard Debecker">
			<div class="top">
				<div>Hello</div>
				<p>my name is</p>
			</div>
			<div class="name">
				<Image
					src={logoImage}
					formats={['webp', 'avif']}
					widths={[100, 200, 400, 800]}
					alt="vegetalope written with a black Sharpie on white paper"
					loading="lazy"
				/>
			</div>
		</a>

		<div class="footer-toggle">
			<ThemeToggle />
			{showRss && (
				<a class="footer-rss" href="/rss.xml">RSS</a>
			)}
		</div>
	</div>
</footer>
