vg-pink = #fd83b5
vg-green = #97e9c2
vg-dark-green = #adffd9
vg-blue = #83ecfc
vg-white = #ffffff
vg-grey = #bdbdbd
vg-black = #171717
vg-font = sans-serif

base-font-size = 2.4em
base-line-height = 1.5em

*:focus
  outline 0.0625em solid vg-blue

*,
body,
html
  box-sizing border-box

body,
html
  background-color vg-white
  color vg-black
  font-family vg-font

  @media (prefers-color-scheme: dark)
    background-color vg-black
    color vg-grey
    font-weight lighter

body
  line-height 1.5
  padding 4em 1em

header,
footer
  text-align center

h2
  margin-top 1em
  padding-top 1em

article
  header
    text-align left

    @media (max-width: 640px)
      text-align center

body
  > section
    max-width 50em
    margin 2em auto 6em

    @media (max-width: 640px)
      margin-bottom 2em

a
  @media print
    color vg-black

  @media (prefers-color-scheme: dark)
    color vg-pink

a:focus,
a:hover
  background-color lighten(vg-pink, 50%)
  color vg-black

  @media (prefers-color-scheme: dark)
    background-color darken(vg-black, 50%)
    color lighten(vg-pink, 50%)

.hidden
  @media screen
    position absolute
    top auto
    left -999em
    width 1px
    height 1px
    white-space nowrap
    overflow hidden

#logo
  width 20em
  height 20em

  @media print
    display none

  @media (max-width: 640px)
    width 10em
    height 10em

  @media (prefers-color-scheme: dark)
    fill vg-white


#logo-hidden
  display none

  @media (max-width: 640px)
    width 160px
    height 160px

#logo:hover
  fill vg-pink

#home:hover,
#home:focus
  background-color transparent

.nav > a
  @media print
    display none

article
  max-width 35em
  margin auto

table
  border-collapse collapse
  border 1px solid vg-black
  
  @media (prefers-color-scheme: dark)
    border-color vg-white

table th,
table td
  border 1px solid vg-black
  padding 0.25em

  @media (prefers-color-scheme: dark)
    border-color vg-white

pre
  font-family monospace
  line-height 140%
  white-space pre
  padding-left 1em
  overflow-x: auto;

code
  font-family  monospace
  line-height 140%
  white-space pre
  font-size 110%
  padding 0.0625em 0.125em 0

  @media (prefers-color-scheme: dark)
    color vg-white


blockquote
  padding-left 1em
  border-left 0.2em solid vg-green
  font-family serif
  font-style italic
